@model LMW.Models.Admin.CreateMessageModel

@{
    ViewBag.Title = "Gửi thông báo";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <ol class="breadcrumb clearfix">
            <li><i class="fa fa-cubes"></i> <a href="/Message/ListMessages">Thông báo</a></li>
            <li class="active"><span>Gửi thông báo đến khách hàng</span></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- SELECT2 EXAMPLE -->
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Nhập thông báo</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label>Số điện thoại (cách nhau dấu phẩy)</label>
                            @Html.EditorFor(model => model.Phones, new { htmlAttributes = new { @class = "form-control", @placeholder = "Số điện thoại nhận thông báo, mỗi số cách nhau dấu phẩy" } })
                            @Html.ValidationMessageFor(model => model.Phones, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Tiêu đề</label>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tiêu đề" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Mô tả ngắn gọn</label>
                            @Html.TextAreaFor(model => model.Message, new { @class = "form-control textarea", @rows = "8", @placeholder = "Nội dung thông báo" })
                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <div class="form-group">
                    <input type="submit" value="Lưu thông tin" class="btn btn-success" style="width: 120px;" />
                    <input type="reset" value="Nhập lại" class="btn btn-default" style="width: 120px;" />
                    <a href="javascript:window.history.back();" class="btn btn-default" style="width: 120px;">Trở về</a>
                </div>
            </div>
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
}

@section Styles {
    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="~/Scripts/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
}

@section Scripts {
    <!-- CK Editor -->
    <script src="~/Scripts/bower_components/ckeditor/ckeditor.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/Scripts/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script>

        $(function () {
            // Replace the <textarea id="editor1"> with a CKEditor
            // instance, using default configuration.
            // CKEDITOR.replace('fullDescription')
            //bootstrap WYSIHTML5 - text editor
            $('.textarea').wysihtml5()
        })

    </script>
}