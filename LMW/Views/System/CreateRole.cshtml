@model LMW.Models.Admin.CreateRoleModel

@{
    ViewBag.Title = "Tạo chức danh";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <ol class="breadcrumb clearfix">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/System/ListRoles">Chức danh</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- SELECT2 EXAMPLE -->
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Nhập thông tin chức danh</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Chức danh</label>
                            @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Mô tả chức danh</label>
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = "4", @placeholder = "Mô tả chức danh" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <div class="form-group">
                    <input type="submit" value="Lưu thông tin" class="btn btn-success" style="width: 120px;" />
                    <input type="reset" value="Nhập lại" class="btn btn-default" style="width: 120px;" />
                    <a href="javascript:window.history.back();" class="btn btn-default" style="width: 120px;">Trở về</a>
                </div>
            </div>
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
}
